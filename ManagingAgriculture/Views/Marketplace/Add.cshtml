@model ManagingAgriculture.Models.MarketplaceListing
@{
    ViewData["Title"] = "Post Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width:720px;">
        <div class="card-body">
            <h3 class="card-title mb-3">Post New Marketplace Listing</h3>
            <form asp-action="Add" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (ViewBag.UserMachinery != null && ((List<ManagingAgriculture.Models.Machinery>)ViewBag.UserMachinery).Any())
                {
                    <div class="mb-3">
                        <label class="form-label">Or choose from your existing machinery</label>
                        <select name="selectedMachineryId" id="selectedMachineryId" class="form-select">
                            <option value="">-- Use existing machinery (optional) --</option>
                            @foreach (var m in (List<ManagingAgriculture.Models.Machinery>)ViewBag.UserMachinery)
                            {
                                <option value="@m.Id">@m.Name (@m.Type) - @m.Status</option>
                            }
                        </select>
                    </div>
                }

                <!-- Item Name -->
                <div class="mb-3">
                    <label asp-for="ItemName" class="form-label">Item Name</label>
                    <input asp-for="ItemName" class="form-control" placeholder="e.g., John Deere Tractor" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <select asp-for="Category" class="form-control">
                        <option value="">-- Select Category --</option>
                        <option value="Equipment">Equipment</option>
                        <option value="Seeds">Seeds</option>
                        <option value="Supplies">Supplies</option>
                        <option value="Tools">Tools</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <!-- Condition Status -->
                <div class="mb-3">
                    <label asp-for="ConditionStatus" class="form-label">Condition</label>
                    <select asp-for="ConditionStatus" class="form-control">
                        <option value="">-- Select Condition --</option>
                        <option value="New">New</option>
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                        <option value="Poor">Poor</option>
                    </select>
                    <span asp-validation-for="ConditionStatus" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your item..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Listing Type and Pricing -->
                <hr class="my-4" />
                <h5 class="mb-3">Listing Type & Pricing</h5>

                <div class="mb-3">
                    <label asp-for="ListingType" class="form-label">I want to:</label>
                    <select asp-for="ListingType" class="form-control" id="listingType">
                        <option value="">-- Select Option --</option>
                        <option value="Sale">Sell only</option>
                        <option value="Rent">Rent only</option>
                        <option value="Both">Sell and/or Rent</option>
                    </select>
                    <span asp-validation-for="ListingType" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SalePrice" class="form-label">Sale Price ($)</label>
                        <input asp-for="SalePrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="RentalPricePerDay" class="form-label">Daily Rental Price ($)</label>
                        <input asp-for="RentalPricePerDay" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
                    </div>
                </div>

                <!-- Seller Information -->
                <hr class="my-4" />
                <h5 class="mb-3">Your Contact Information</h5>

                <div class="mb-3">
                    <label asp-for="SellerName" class="form-label">Your Name / Business</label>
                    <input asp-for="SellerName" class="form-control" placeholder="Your name or business name" />
                    <span asp-validation-for="SellerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SellerPhone" class="form-label">Contact Phone</label>
                    <input asp-for="SellerPhone" class="form-control" type="tel" placeholder="555-1234" />
                    <span asp-validation-for="SellerPhone" class="text-danger"></span>
                </div>

                <!-- Image URL (Optional) -->
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL (Optional)</label>
                    <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="text-muted">Provide a full URL to an image hosted online (e.g., https://...)</small>
                </div>

                <!-- Form Actions -->
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save"></i> Post Listing
                    </button>
                    <a href="@Url.Action("Index", "Marketplace")" class="btn btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function(){
        var select = document.getElementById('selectedMachineryId');
        if (!select) return;
        select.addEventListener('change', function(){
            var id = this.value;
            if (!id) return;
            // Simple fill: send a small fetch to a new endpoint to get machinery details
            fetch('/Machinery/DetailsApi/' + id)
                .then(r => r.json())
                .then(data => {
                    if (data) {
                        document.querySelector('[name="ItemName"]').value = data.name;
                        document.querySelector('[name="Description"]').value = data.type + ' - ' + data.name;
                        document.querySelector('[name="Category"]').value = 'Equipment';
                    }
                })
                .catch(()=>{});
        });
    })();
</script>
