@model IEnumerable<ManagingAgriculture.ViewModels.CompanyOverviewViewModel>
@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building"></i> Registered Companies</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <div class="row">
        @foreach (var comp in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 1.5rem;">
                                @comp.Name.Substring(0,1).ToUpper()
                            </div>
                            <div class="ms-3">
                                <h5 class="card-title mb-0">@comp.Name</h5>
                                <small class="text-muted">Owner: @comp.OwnerEmail</small>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <div class="h4 mb-0">@comp.StaffCount</div>
                                <small class="text-muted">Staff</small>
                            </div>
                            <div class="col-6">
                                <div class="h4 mb-0">@comp.PlantCount</div>
                                <small class="text-muted">Plants</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
