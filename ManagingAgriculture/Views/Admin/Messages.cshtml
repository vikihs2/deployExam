@model IEnumerable<ManagingAgriculture.Models.ContactForm>
@{
    ViewData["Title"] = "Admin Inbox";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-envelope-open-text"></i> Support Messages</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
             <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Sender</th>
                            <th>Message</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@msg.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <div class="fw-bold">@msg.FullName</div>
                                        <small class="text-muted">@msg.Email</small>
                                    </td>
                                    <td>@msg.Message</td>
                                    <td>
                                        @if (msg.IsReplied)
                                        {
                                            <span class="badge bg-success">Replied</span>
                                            <div class="small text-muted mt-1">@msg.RepliedDate?.ToShortDateString()</div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!msg.IsReplied)
                                        {
                                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#replyModal" data-id="@msg.Id" data-email="@msg.Email">
                                                <i class="fas fa-reply"></i> Reply
                                            </button>
                                        }
                                        else 
                                        {
                                            <button class="btn btn-sm btn-secondary" disabled>Replied</button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center p-4">No messages found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="replyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ReplyToMessage" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reply to Message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="replyMsgId" />
                    <div class="mb-3">
                        <label class="form-label">To:</label>
                        <input type="text" class="form-control" id="replyEmail" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message:</label>
                        <textarea class="form-control" name="replyContent" rows="4" required placeholder="Type your reply here..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Send Reply</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var replyModal = document.getElementById('replyModal');
        replyModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var email = button.getAttribute('data-email');
            
            replyModal.querySelector('#replyMsgId').value = id;
            replyModal.querySelector('#replyEmail').value = email;
        });
    </script>
}
