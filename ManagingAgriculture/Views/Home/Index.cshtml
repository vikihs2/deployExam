@{
    Layout = null;
    ViewData["Title"] = "AgroCore - Home";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Page reset */
        *{box-sizing:border-box;margin:0;padding:0}
        body{font-family: 'Helvetica Neue', Arial, sans-serif;color:#222;background:#fff}

        /* Navbar */
        .top-nav{position:fixed;left:0;right:0;top:0;height:72px;background:#fff;display:flex;align-items:center;justify-content:space-between;padding:0 28px;border-bottom:1px solid rgba(0,0,0,0.06);z-index:1200}
        .nav-left{display:flex;align-items:center;gap:14px}
        .logo-badge{width:44px;height:44;background:#3f7a3f;border-radius:8px;display:inline-flex;align-items:center;justify-content:center;color:#fff;font-weight:700}
        .brand{font-weight:800;font-size:20px;color:#2d2d2d}
        /* center nav removed intentionally per request */
        .nav-right{display:flex;gap:12px;align-items:center}
        .btn-login{color:#2d2d2d;background:transparent;border:none;cursor:pointer}
        .btn-register{background:#6b8e49;color:#fff;padding:8px 14px;border-radius:8px;border:none;cursor:pointer}

        /* Hero */
        .hero{height:640px;background:url('/images/homeBackground.webp') center/cover no-repeat;position:relative;display:flex;align-items:center;justify-content:center}
        .hero::before{content:"";position:absolute;inset:0;background:linear-gradient(180deg,rgba(0,0,0,0.35),rgba(0,0,0,0.55));}
        .hero-inner{position:relative;z-index:2;text-align:center;color:#fff;max-width:1100px;padding:40px}
        .hero h1{font-family: 'Georgia', serif;font-size:62px;line-height:1.02;font-weight:900;margin-bottom:14px;text-shadow:0 16px 40px rgba(0,0,0,0.6)}
        .hero h1 .accent{color:#e0b03b;display:block;font-size:1.02em}
        .hero p{max-width:760px;margin:0 auto 30px;color:rgba(255,255,255,0.92);font-size:18px;text-shadow:0 6px 18px rgba(0,0,0,0.5)}

        /* Center stats */
        .stats{position:absolute;left:50%;transform:translateX(-50%);bottom:48px;display:flex;gap:120px;z-index:2}
        .stat{color:#fff;text-align:center}
        .stat .num{font-size:36px;font-weight:900;letter-spacing:-1px}
        .stat .label{opacity:0.9;margin-top:6px}

        /* Content cards */
        .content-section{padding:64px 28px;background:#fbf7f2}
        .section-title{max-width:1100px;margin:0 auto 28px;text-align:center}
        .section-title h2{font-family:'Georgia',serif;font-size:40px;color:#2b2b2b}
        .cards{max-width:1100px;margin:0 auto;display:grid;grid-template-columns:repeat(3,1fr);gap:20px}
        .card{background:#fff;border-radius:10px;padding:22px;border:1px solid rgba(0,0,0,0.06);box-shadow:0 6px 18px rgba(15,15,15,0.02);min-height:120px}
        .card .icon{width:44px;height:44;background:#eef7ea;border-radius:8px;display:inline-flex;align-items:center;justify-content:center;margin-bottom:12px}
        .card h3{font-size:20px;margin-bottom:8px;color:#2b2b2b}
        .card p{color:#6b6b6b;font-size:14px}

        /* CTA dark strip */
        .cta{background:#452b20;color:#fff;padding:72px 28px;text-align:center}
        .cta h2{font-family:'Georgia',serif;font-size:44px;margin-bottom:14px}
        .cta p{opacity:0.9;margin-bottom:24px}
        .cta .cta-actions{display:flex;gap:16px;justify-content:center}
        .cta .btn-primary{background:#e0b03b;border:none;padding:12px 26px;border-radius:6px;color:#2b2b2b}
        .cta .btn-outline{background:transparent;border:1px solid rgba(255,255,255,0.2);color:#fff;padding:10px 20px;border-radius:6px}

        /* Footer */
        .site-footer{background:#2b201b;color:rgba(255,255,255,0.9);padding:36px 28px}
        .footer-inner{max-width:1100px;margin:0 auto;display:flex;gap:40px}
        .footer-col{flex:1}
        .footer-col h4{color:#fff;margin-bottom:12px}
        .footer-col p,a{color:rgba(255,255,255,0.85);text-decoration:none}


        /* Simple fade-in animation classes (preserved) */
        .fade-in{animation:fadeIn 900ms ease both}
    </style>
</head>
