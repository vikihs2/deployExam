@{
    Layout = null;
    ViewData["Title"] = "AgroCore - Agriculture Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        /* Top Navigation */
        .top-nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(30, 30, 40, 0.85);
            backdrop-filter: blur(10px);
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
            border-bottom: 1px solid rgba(6, 169, 107, 0.1);
        }

        .nav-brand {
            font-size: 1.5rem;
            font-weight: 900;
            color: #06a96b;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-brand:hover {
            color: #058a56;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .nav-links .btn-login {
            border: 2px solid #06a96b;
            color: #06a96b;
        }

        .nav-links .btn-login:hover {
            background: rgba(6, 169, 107, 0.1);
        }

        .nav-links .btn-register {
            background: #06a96b;
            color: white;
        }

        .nav-links .btn-register:hover {
            background: #058a56;
        }

        .nav-links .btn-signout {
            color: #999;
        }

        .nav-links .btn-signout:hover {
            color: #06a96b;
        }

        .authenticated-section {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        /* Animations */
        @@keyframes fadeInLeft {
            from { opacity: 0; transform: translateX(-50px); }
            to { opacity: 1; transform: translateX(0); }
        }

        /* Hero Section */
        .hero-section {
    position: relative;
    height: 100vh;
    background: 
        linear-gradient(135deg, rgba(0,0,0,0.45) 0%, rgba(0,0,0,0.25) 100%), 
        url('/images/homeBackground.webp') center/cover no-repeat;
    display: flex;
    align-items: center;
    color: white;
    overflow: hidden;
    margin-top: 60px;
}


    .hero-content {
        max-width: 600px;
        padding: 60px 40px;
        z-index: 2;
        animation: fadeInLeft 1s ease-out;
    }

    .hero-content h1 {
        font-size: 4rem;
        font-weight: 900;
        margin: 0 0 20px 0;
        letter-spacing: -2px;
        line-height: 1.2;
    }

    .hero-content p {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
        opacity: 0.95;
        color: #e0e0e0;
    }

    /* hero steps removed per request */
    /* Features Section */
    .features-section {
        background: rgba(20, 20, 30, 0.95);
        padding: 80px 40px;
        color: white;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(6, 169, 107, 0.3);
        padding: 30px;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .feature-card:hover {
        background: rgba(6, 169, 107, 0.1);
        border-color: rgba(6, 169, 107, 0.6);
        transform: translateY(-5px);
    }

    .feature-icon {
        font-size: 2.5rem;
        color: #06a96b;
    }

    .feature-card h3 {
        font-size: 1.3rem;
        margin: 0;
    }

    .feature-card p {
        margin: 0;
        opacity: 0.8;
    }

    /* Tours/Modules Section */
    .tours-section {
        background: linear-gradient(180deg, rgba(20, 20, 30, 0.9) 0%, rgba(0,0,0,0.95) 100%);
        padding: 80px 40px;
        color: white;
    }

    .section-title {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title h2 {
        font-size: 3rem;
        margin: 0 0 15px 0;
        font-weight: 900;
    }

    .section-title p {
        opacity: 0.7;
        margin: 0;
    }

    .tours-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .tour-card {
        position: relative;
        height: 300px;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        group: 'tour';
    }

    .tour-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .tour-card:hover img {
        transform: scale(1.05);
    }

    .tour-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
        padding: 30px 20px 20px;
        color: white;
        transform: translateY(50px);
        transition: transform 0.3s ease;
    }

    .tour-card:hover .tour-overlay {
        transform: translateY(0);
    }

    .tour-overlay h3 {
        margin: 0 0 10px 0;
        font-size: 1.3rem;
    }

    .tour-overlay p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* Video Section */
    .video-section {
        background: rgba(20, 20, 30, 0.95);
        padding: 80px 40px;
        color: white;
    }

    .video-content {
        max-width: 1000px;
        margin: 0 auto;
    }

    .video-content h2 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .video-content p {
        font-size: 1rem;
        margin-bottom: 40px;
        opacity: 0.8;
        max-width: 600px;
    }

    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .video-thumb {
        position: relative;
        aspect-ratio: 16/9;
        background: rgba(0,0,0,0.5);
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
    }

    .video-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        background: rgba(6, 169, 107, 0.8);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        transition: background 0.3s ease;
    }

    .video-thumb:hover .play-button {
        background: rgba(6, 169, 107, 1);
    }

    /* CTA Button */
    .btn-cta {
        display: inline-block;
        background: #06a96b;
        color: white;
        padding: 12px 30px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-cta:hover {
        background: #058a56;
        transform: translateY(-2px);
    }

    /* Footer */
    .home-footer {
        background: rgba(0,0,0,0.8);
        padding: 40px;
        text-align: center;
        color: #999;
        border-top: 1px solid rgba(6,169,107,0.2);
    }

    .social-links {
        margin-bottom: 20px;
    }

    .social-links a {
        color: #999;
        margin: 0 15px;
        font-size: 1.5rem;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .social-links a:hover {
        color: #06a96b;
    }

    /* Form Input Focus Override */
    input:focus, textarea:focus, select:focus {
        border-color: #06a96b !important;
        box-shadow: 0 0 0 0.2rem rgba(6, 169, 107, 0.25) !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .top-nav {
            flex-direction: column;
            gap: 15px;
            padding: 15px 20px;
        }

        .hero-content {
            padding: 40px 20px;
            max-width: 100%;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-steps {
            right: 30px;
            gap: 20px;
            font-size: 1.5rem;
        }

        .section-title h2 {
            font-size: 2rem;
        }
    }
    </style>
</head>
<body>

