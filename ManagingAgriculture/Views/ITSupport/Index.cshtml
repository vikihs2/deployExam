@model IEnumerable<ManagingAgriculture.Models.ContactForm>
@{
    ViewData["Title"] = "IT Support";
}

<div class="dashboard-container">
    <div class="page-header">
        <div>
            <h2>ðŸ›  IT Support</h2>
            <p class="subtitle">Technical Maintenance</p>
        </div>
    </div>

    <div class="row">
         <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Diagnostics</h5>
                     <p>Status: <span class="text-success">Healthy</span></p>
                    <a href="#" class="btn btn-info text-white">Run Diagnostics</a>
                </div>
            </div>
        </div>
    </div>

     <!-- Contact Messages -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Support Tickets / Messages</h5>
        </div>
        <div class="card-body p-0">
             <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@msg.FullName</td>
                                    <td>@msg.Email</td>
                                    <td>@msg.Message</td>
                                    <td>@msg.CreatedDate.ToShortDateString()</td>
                                    <td>
                                    <td>
                                        @if (msg.IsReplied)
                                        {
                                            <span class="badge bg-success">Replied</span>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#replyModal" data-id="@msg.Id" data-email="@msg.Email">
                                                Reply
                                            </button>
                                        }
                                    </td>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center text-muted">No messages found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
