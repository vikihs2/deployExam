@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <h2>Dashboard</h2>
    <p class="subtitle">Overview of your farm operations</p>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-header">
                <h3>Active Plants</h3>
                <i class="fas fa-leaf stat-icon"></i>
            </div>
            <div class="stat-number">3</div>
            <div class="stat-label">Crops being tracked</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <h3>Resources</h3>
                <i class="fas fa-box stat-icon"></i>
            </div>
            <div class="stat-number">5</div>
            <div class="stat-label">Items in inventory</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <h3>Machinery</h3>
                <i class="fas fa-cogs stat-icon"></i>
            </div>
            <div class="stat-number">3</div>
            <div class="stat-label">Equipment units</div>
        </div>

        <div class="stat-card alert-card">
            <div class="stat-header">
                <h3>Low Stock Alerts</h3>
                <i class="fas fa-exclamation-triangle stat-icon"></i>
            </div>
            <div class="stat-number">1</div>
            <div class="stat-label">Items need restock</div>
        </div>
    </div>

    <!-- Active Crops Section -->
    <div class="crops-section">
        <div class="section-header">
            <i class="fas fa-leaf"></i>
            <h3>Active Crops</h3>
        </div>
        <p class="section-subtitle">Monitor your growing plants and upcoming tasks</p>

        <div class="crops-list">
            <div class="crop-item">
                <div class="crop-name">
                    <h4>Tomato Garden A</h4>
                    <span class="crop-type">Tomato</span>
                </div>
                <div class="crop-progress">
                    <div class="progress-bar-container">
                        <div class="progress-bar" style="width: 65%;"></div>
                    </div>
                </div>
                <div class="crop-info">
                    <span class="next-task">Next: Fertilize in 3 days</span>
                    <span class="growth-rate">65% Growth</span>
                </div>
            </div>

            <div class="crop-item">
                <div class="crop-name">
                    <h4>Corn Field B</h4>
                    <span class="crop-type">Corn</span>
                </div>
                <div class="crop-progress">
                    <div class="progress-bar-container">
                        <div class="progress-bar" style="width: 85%;"></div>
                    </div>
                </div>
                <div class="crop-info">
                    <span class="next-task">Next: Harvest in 6 days</span>
                    <span class="growth-rate">85% Growth</span>
                </div>
            </div>

            <div class="crop-item">
                <div class="crop-name">
                    <h4>Wheat Field C</h4>
                    <span class="crop-type">Wheat</span>
                </div>
                <div class="crop-progress">
                    <div class="progress-bar-container">
                        <div class="progress-bar" style="width: 45%;"></div>
                    </div>
                </div>
                <div class="crop-info">
                    <span class="next-task">Next: Water tomorrow</span>
                    <span class="growth-rate">45% Growth</span>
                </div>
            </div>
        </div>
    </div>
</div>
