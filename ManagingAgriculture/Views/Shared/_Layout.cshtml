<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agriculture Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-leaf"></i>
                <span>AgroCore</span>
            </div>
            <div class="sidebar-menu">
                <p class="menu-title">Main Menu</p>
                <a href="@Url.Action("Index", "Dashboard")" class="menu-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Index", "Plants")" class="menu-item">
                    <i class="fas fa-leaf"></i>
                    <span>Plant Tracking</span>
                </a>
                <a href="@Url.Action("Index", "Resources")" class="menu-item">
                    <i class="fas fa-box"></i>
                    <span>Resources</span>
                </a>
                <a href="@Url.Action("Index", "Machinery")" class="menu-item">
                    <i class="fas fa-cogs"></i>
                    <span>Machinery</span>
                </a>
                <a href="@Url.Action("Index", "Marketplace")" class="menu-item">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Marketplace</span>
                </a>
                <a href="@Url.Action("Index", "Sensors")" class="menu-item">
                    <i class="fas fa-tint"></i>
                    <span>Soil Humidity</span>
                </a>
                
                <p class="menu-title">Account</p>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="menu-item" style="display:flex;align-items:center;gap:8px;padding:10px 12px;">
                        @Html.AntiForgeryToken()
                        <i class="fas fa-sign-out-alt"></i>
                        <button type="submit" class="btn btn-link p-0" style="color:inherit;text-decoration:none;">Sign out</button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="menu-item">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </a>
                    <a href="@Url.Action("Register", "Account")" class="menu-item">
                        <i class="fas fa-user-plus"></i>
                        <span>Register</span>
                    </a>
                }
            </div>
        </nav>

        <main class="main-content">
            <header class="top-header">
                <div class="header-row">
                    <button id="sidebarToggle" class="sidebar-toggle-btn" title="Toggle sidebar">
                        <span class="toggle-line"></span>
                        <span class="toggle-line"></span>
                    </button>
                    <h1>@ViewData["Title"]</h1>
                </div>
            </header>
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            // Restore sidebar state from localStorage
            if (localStorage.getItem('sidebarShrink') === 'true') {
                $('nav.sidebar').addClass('sidebar-shrink');
                $('.main-content').addClass('main-content-shrink');
            }
            $('#sidebarToggle').on('click', function () {
                $('nav.sidebar').toggleClass('sidebar-shrink');
                $('.main-content').toggleClass('main-content-shrink');
                // Save state to localStorage
                var isShrunk = $('nav.sidebar').hasClass('sidebar-shrink');
                localStorage.setItem('sidebarShrink', isShrunk ? 'true' : 'false');
            });
        });
    </script>
</body>
</html>
