<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agriculture Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var showSidebar = !(controller == "Home" && action == "Contact");
    }

    <div class="d-flex">
        @if (showSidebar)
        {
            <nav class="sidebar">
                <div class="sidebar-brand">
                    <div class="brand-emoji" aria-hidden="true">ðŸŒ±</div>
                    <span class="brand-text">AgroCore</span>
                </div>
                <div class="sidebar-menu">
                    <p class="menu-title">Main Menu</p>
                    <a href="@Url.Action("Index", "Dashboard")" class="menu-item dashboard-link">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="@Url.Action("Index", "Plants")" class="menu-item">
                        <i class="fas fa-leaf"></i>
                        <span>Plant Tracking</span>
                    </a>
                    <a href="@Url.Action("Index", "Resources")" class="menu-item">
                        <i class="fas fa-box"></i>
                        <span>Resources</span>
                    </a>
                    <a href="@Url.Action("Index", "Machinery")" class="menu-item">
                        <i class="fas fa-cogs"></i>
                        <span>Machinery</span>
                    </a>
                    <a href="@Url.Action("Index", "Marketplace")" class="menu-item">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Marketplace</span>
                    </a>
                    <a href="@Url.Action("Index", "Sensors")" class="menu-item">
                        <i class="fas fa-tint"></i>
                        <span>Soil Humidity</span>
                    </a>
                    
                    <p class="menu-title">Account</p>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="menu-item" style="display:flex;align-items:center;gap:8px;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-cancel" style="display:flex;align-items:center;gap:8px;padding:6px 10px;border-radius:6px;">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="signout-text">Sign out</span>
                            </button>
                        </form>
                    }
                </div>
            </nav>
        }

        <main class="main-content@(showSidebar ? " main-content-expanded" : "")">
            <header class="top-header">
                <div class="header-row">
                    <h1>@ViewData["Title"]</h1>

                    <div class="ms-auto nav-right">
                        @if (new[] { "Plants", "Resources", "Machinery", "Marketplace" }.Contains(controller))
                        {
                            <!-- On these resource pages show only Add (if available) and Home at the far right -->
                            <a class="btn btn-add me-2" href="@Url.Action("Add", controller)">
                                <i class="fas fa-plus"></i> Add
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="home-link ms-3" title="Home">
                                <div class="home-icon"><i class="fas fa-home"></i></div>
                            </a>
                        }
                        else
                        {
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                var email = User.Identity?.Name ?? User.FindFirst("email")?.Value ?? "";
                                var name = "User";
                                if (!string.IsNullOrEmpty(email) && email.Contains("@"))
                                {
                                    name = email.Split('@')[0];
                                    if (name.Length > 0)
                                    {
                                        name = char.ToUpper(name[0]) + name.Substring(1);
                                    }
                                }
                                // Show Admin when user is in role Admin or username/email matches admin patterns
                                if (User.IsInRole("Admin") || name.Equals("admin", StringComparison.OrdinalIgnoreCase) || email.StartsWith("admin", StringComparison.OrdinalIgnoreCase) || email.Equals("admin@gmail.com", StringComparison.OrdinalIgnoreCase))
                                {
                                    name = "Admin";
                                }
                                <span class="me-3">Welcome @name!</span>
                                @* Show Dashboard/Sign out only on the public Home page, not on Dashboard itself *@
                                @if (controller == "Home")
                                {
                                    <a class="btn btn-dashboard me-2" href="@Url.Action("Index", "Dashboard")">Dashboard</a>
                                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline-block;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-cancel">Sign out</button>
                                    </form>
                                }
                                <a href="@Url.Action("Index", "Home")" class="home-link ms-3" title="Home">
                                    <div class="home-icon"><i class="fas fa-home"></i></div>
                                </a>
                            }
                            else
                            {
                                    <a href="@Url.Action("Index", "Home")" class="home-link ms-3" title="Home">
                                    <div class="home-icon"><i class="fas fa-home"></i></div>
                                </a>
                            }
                        }
                    </div>
                </div>
            </header>
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        // Sidebar removed â€” no sidebar script required.
    </script>
</body>
</html>
