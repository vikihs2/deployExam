@model IEnumerable<ManagingAgriculture.Models.ContactForm>
@{
    ViewData["Title"] = "My Inbox";
}

<div class="dashboard-container">
    <div class="page-header">
        <div>
            <h2>ðŸ“¬ My Inbox</h2>
            <p class="subtitle">Messages from Support & Admin</p>
        </div>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <div class="card">
        <div class="card-body p-0">
             <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>My Message</th>
                            <th>Reply</th>
                            <th>From</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@msg.CreatedDate.ToShortDateString()</td>
                                    <td>@msg.Message</td>
                                    <td>
                                        @if (msg.IsReplied)
                                        {
                                            <div class="alert alert-success mb-0 p-2">
                                                @msg.ReplyMessage
                                                <div class="small text-muted mt-1">
                                                    @msg.RepliedDate?.ToString("g")
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Waiting for reply...</span>
                                        }
                                    </td>
                                    <td>
                                        @if(msg.IsReplied)
                                        {
                                            <span class="badge bg-primary">@msg.RepliedBy</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center text-muted">No messages found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
