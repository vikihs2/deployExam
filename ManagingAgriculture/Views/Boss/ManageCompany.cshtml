@model ManagingAgriculture.Models.Company
@{
    ViewData["Title"] = "Manage Company";
}

<div class="dashboard-container">
    <h2>üè¢ Manage Company</h2>
    
    <div class="card mt-3">
        <div class="card-body">
            <form asp-action="UpdateCompany" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="mb-3">
                    <label class="form-label">Company Name</label>
                    <input type="text" name="name" class="form-control" value="@Model.Name" required />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Company Logo</label>
                    <input type="file" name="logo" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.LogoPath))
                    {
                        <div class="mt-2">
                             <p>Current Logo:</p>
                             <img src="@Model.LogoPath" alt="Company Logo" style="max-height: 100px; width: auto;" />
                        </div>
                    }
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
