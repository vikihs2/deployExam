@{
    ViewData["Title"] = "Calendar";
}

<div class="container-fluid dashboard-container">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    Leave Balance
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4">20</h1>
                    <p class="text-muted">Total Days</p>
                    <hr/>
                    <h2 class="text-success">20</h2>
                    <p class="text-muted">Days Remaining</p>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    Actions
                </div>
                <div class="card-body d-grid gap-2">
                    <button class="btn btn-outline-primary" id="btnMarkLeave">Request / Mark Leave</button>
                    <button class="btn btn-outline-secondary">Company Holidays</button>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek'
            },
            height: 650,
            events: [
                // Demo events. TODO: Load from API
                {
                    title: 'National Holiday',
                    start: '2026-03-03',
                    color: 'red'
                }
            ]
        });
        calendar.render();
    });
</script>
